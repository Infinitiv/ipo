<h1>New question</h1>

<%= render 'form' %>
<%= form_tag("/export", method: "get") do %>
  <div class="field">
    <%= label_tag :subject %><br />
    <%= select_tag :subject_id,  options_from_collection_for_select(@subjects, "id", "name"), include_blank: true %>
  </div>
  <div class="small-3 large-3 columns">
  <%= submit_tag, 'Экспорт' %>
  </div>
<% end %>
<%= link_to 'Back', questions_path %>
